{
  "name": "create-cli-application-website",
  "version": "0.0.0",
  "description": "Website for `create-cli-application`",
  "main": "index.js",
  "scripts": {
    "browsersync": "browser-sync start --proxy \"http://localhost:3000\" --no-open",
    "build": "npm run format && npm run lint && npm run build-client && npm run build-server",
    "build-prod": "npm run format && npm run lint && env-cmd -e production npm run build-client && npm run build-server",
    "build-client": "rimraf dist && webpack",
    "build-server": "rimraf build && tsc && copyfiles -f src/server/assets/**/* build/assets",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "dev": "env-cmd -e development npm start",
    "format": "prettier --write .",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx src --color",
    "start": "node build/index.js",
    "start:dev": "start-server-and-test dev http://localhost:3000 webpack-dev-server",
    "test": "start-server-and-test test-server http://localhost:3000 cy:run",
    "test-gui": "start-server-and-test test-server http://localhost:3000 cy:open",
    "test-server": "env-cmd -e test npm start"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alexlee-dev/create-cli-application.git"
  },
  "keywords": [],
  "author": "Alex Lee (www.alexlee.dev)",
  "bugs": {
    "url": "https://github.com/alexlee-dev/create-cli-application/issues"
  },
  "homepage": "https://github.com/alexlee-dev/create-cli-application#readme",
  "devDependencies": {
    "@svgr/webpack": "^5.4.0",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.6",
    "@types/morgan": "^1.9.0",
    "@types/react": "^16.9.34",
    "@types/react-dom": "^16.9.7",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "clean-webpack-plugin": "^3.0.0",
    "copyfiles": "^2.2.0",
    "css-loader": "^3.5.3",
    "cypress": "^4.4.1",
    "env-cmd": "^10.1.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-react": "^7.19.0",
    "html-webpack-plugin": "^4.2.0",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "source-map-loader": "^0.2.4",
    "start-server-and-test": "^1.11.0",
    "style-loader": "^1.2.0",
    "ts-loader": "^7.0.1",
    "typescript": "^3.8.3",
    "url-loader": "^4.1.0",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3"
  },
  "dependencies": {
    "chalk": "^4.0.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "morgan": "^1.10.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  }
}
